            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg><span class='badge badge-light' id='lblCartCount'> 0 </span>
        </button>*@

            </div>
        </div>
  <br />
    <form>
        <div class="form-row">
            <div class="col-12" id="input-container">
                <i class="fa fa-search icon"></i>
                <input type="text" class="input-text form-control rounded-pill" placeholder="  Enter your search here" />
            </div>
        </div>
    </form>
    <br />
    @for (int i = 0; i < products.Count(); i++)
    {
        if (i % 3 == 0)
        {
            @:<div class="card-deck">
            }

            <div class="card">
                <img class="card-img top" src=@products[i].imagePath />
                <div class="card-body">
                    <h5 class="card-title">@products[i].productName</h5>
                    <p class="card-text">@products[i].description</p>
                    <p class="card-text"> <button type="button" class="btn btn-outline-success btn-block my-2 my-sm-0 rounded-pill">$@products[i].price - Add To Cart</button></p>
                    @*<p class="card-text"><button>$@products[i].price - Add To Cart</button></p>*@
                </div>
            </div>
            @if ((i + 1) % 3 == 0)
            {

            @:</div><br />
        }

        }
</div>


  

