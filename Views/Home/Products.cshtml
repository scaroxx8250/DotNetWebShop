
@{
    ViewData["Title"] = "Products";
    List<Products> products = (List<Products>)ViewData["products"];
}
<style>
    #input-container{
        position:relative;
    }
    .icon{
        position:absolute;
        top:12px;
        left:15px;
    }
    .input-text{
        padding-left:25px;
    }
    .carticon{
       margin-left:250px;
        float: right;
    }
    .badge {
        padding-left: 9px;
        padding-right: 9px;
        -webkit-border-radius: 9px;
        -moz-border-radius: 9px;
        border-radius: 9px;
    }


    #lblCartCount {
        font-size: 12px;
        background: #c67605;
        color: #fff;
        padding: 0 5px;
        vertical-align: top;
        margin-left: -5px;
    }
</style>




<div class="container">
   
        <div class="row">
            <div class="col">
                <ul class="nav">
                    <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Hello Guest</a> 
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><u>My Purchases</u></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><u>Logout</u></a>
                    </li>
                </ul>
            </div>
            <div class="col">
                <button type="button" class="btn shadow-none carticon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-cart" viewBox="0 0 16 16">
                        <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </svg>
                    <span class='badge badge-light' id='lblCartCount'> 5 </span>
                </button>
