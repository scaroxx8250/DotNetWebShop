
@{
    ViewData["Title"] = "Login";
}
@section Scripts
{
    <script src="/js/login.js"></script>
}

<style type="text/css">
    .field-icon {
        float: right;
        padding-right: 25px;
        margin-top: -40px;
        position: relative;
        z-index: 2;
    }

    .form-signin input[type="text"] {
        margin-bottom: 10px !important;
        border-top-left-radius: 0 !important;
        border-top-right-radius: 0 !important;
    }
</style>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v3.8.5">

    <link rel="canonical" href="/css/signin.css">

    <!-- Bootstrap core CSS -->
    <link href="https://getbootstrap.com/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


    <!-- Custom styles for this template -->
    <link href="/css/signin.css" rel="stylesheet">
</head>

<body>
    <div style="vertical-align:top" align="right">
        <a href="/Home/Products">Continue as guest</a>
    </div>
    <div class="text-center">
        <form class="form-signin verticalalign" id="form" action="/Home/Login" method="POST">
            <img class="mb-4" src="/img/login_icon.png" alt="" width="60" height="60">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail" class="sr-only">Username</label>
            <input type="text" id="Username" name="username" class="form-control" placeholder="Username" value="@ViewData["username"]" required
                   oninvalid="this.setCustomValidity('This field cannot be left blank.')"
                   oninput="this.setCustomValidity('')">
            <div>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="Password" name="password" class="form-control" placeholder="Password" required
                       oninvalid="this.setCustomValidity('This field cannot be left blank.')"
                       oninput="this.setCustomValidity('')">
                <span Id="PasswordToggle" data-id="Password" class="fa fa-fw fa-eye field-icon"></span>
            </div>
            <button class="btn btn-lg btn-block btn-outline-success" type="submit" id="signin">Sign in</button>
            <p style="color:red" id="err_msg">@ViewData["errmsg"]</p>
        </form>
    </div>
</body>
</html>