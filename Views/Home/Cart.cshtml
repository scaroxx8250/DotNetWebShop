@{ ViewData["Title"] = "Cart";
    Cart cart = (Cart)ViewData["Cart"];
}
@section Scripts
    {
    <script src="~/js/ChgCartQty.js"></script>
}
<style type="text/css">
    .cart {
        width: 1000px;
        padding: 0 10px 10px;
        border: 10px solid #D5E5F5;
    }

    .cart-title {
        margin-bottom: 10px;
        font-size: 14px;
        border-bottom: 1px solid #AED2FF;
        line-height: 30px;
        height: 30px;
        font-weight: 700;
        text-indent: 15px;
        color: #333;
        font-family: 'Microsoft YaHei';
    }

    .cart-table {
        width: 100%;
        margin: 0 auto;
        border-color: #0A0200;
        font-size: 12px;
        font-family: Verdana,"Microsoft YaHei";
        color: #333333;
    }


        .cart-table th {
            border-bottom: 2px solid #B2D1FF;
            font-weight: bold;
            height: 35px;
            line-height: 1.4375rem;
            text-align: center;
        }

        .cart-table .cart-th-left {
            text-align: center;
            padding-left: 17px;
            font-weight: bold;
        }

    .cart-item .cart-txt-left {
        text-align: center;
        padding-left: 17px;
    }

    .cart-item {
        background-color: #FAFCFF;
        border-bottom: 1px dotted #84B3FD;
    }

        .cart-item td {
            height: 55px;
            text-align: center;
        }



    .cart-name {
        color: #3366D4;
        font-weight: bold;
    }

    .cart-subtotal {
        color: #FF3334;
        font-weight: bold;
    }

    .cart-reduce, .cart-add {
        display: inline-block;
        width: 16px;
        height: 16px;
        line-height: 16px;
        color: #FFF;
        background-color: #BDBDBD;
        border: 0;
        cursor: pointer;
        border-radius: 2px;
        font-family: 'Arial';
        font-size: 0.833331rem;
    }

        .cart-raduce:hover, .cart-add:hover {
            background-color: #FF9900;
        }

    .cart-num {
        margin: 5px;
        width: 35px;
        text-align: center;
        height: 20px;
        line-height: 20px;
        padding: 0 3px;
        display: inline-block;
        background: #fff;
        border: 1px solid #bbb;
    }

    .cart-del, .cart-all {
        color: #3366D4;
    }

        .cart-del:hover, .cart-all:hover {
            text-decoration: underline;
            cursor: pointer;
        }

    .cart-bottom {
        height: 55px;
        text-align: right;
    }

        .cart-bottom .cart-all {
            position: relative;
            top: 1px;
        }

    .cart-bottom-span {
        font-size: 14px;
        padding: 0px 0px;
        margin: 0 30px;
    }

    .cart-total-price {
        font-size: 14px;
        color: #FF3334;
        font-weight: bold;
    }

    .cart-bottom-btn {
        color: #FFF;
        font-size: 14px;
        font-weight: 600px;
        cursor: pointer;
        margin: 0 20px;
        background: #28a745;
        border: 1px solid #28a745;
        border-radius: 5px 5px 5px 5px;
        padding: 6px 12px;
    }

        .cart-bottom-btn:hover {
            background: #28a745;
        }
</style>


<div class="container">

    <div class="row">
        <div class="col">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">
                        Hello @if (ViewData["sessionId"] is null)
                        {
                            @:Guest
                            ViewData["link"] = "/Home/Login";
                            ViewData["linkName"] = "Login";
                        }
                        else
                        {
                            @ViewData["Username"]
                            ViewData["link"] = "/Home/Logout";
                            ViewData["linkName"] = "Logout";
                        }
                    </a>
                </li>
                @if (ViewData["sessionId"] != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Purchases"><u>My Purchases</u></a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href=@ViewData["link"]><u>@ViewData["linkName"]</u></a>
                </li>
            </ul>
        </div>
    </div>
    <br />

    <div class="cart">

        <div class="cart-title">View Cart</div>
        <table class="cart-table">
            <tr class="cart-header">
                <th>Product</th>
                <th class="cart-name">Product Name</th>
                <th class="cart-des">Product Description</th>
                <th width="120">Price</th>
                <th width="100">Quantity</th>
                <th width="120">Subtotal</th>
                <th width="80">Delete</th>
            </tr>

            @if (cart != null)
            {
                @*CartItem is ICollection*@
                @foreach (CartItem item in cart.CartItem)
                {
                    @:<tr class="cart-item">
                        @:<td><img src=@item.Product.ImagePath width="125" height="66" /></td>
                        @:<td class="cart-txt-left"><span class="cart-name">@item.Product.ProductName</span></td>
                        @:<td class="cart-txt-left"><span class="cart-description">@item.Product.Description</span></td>
                        @:<td><span class="cart-price">@item.Product.Price</span></td>
                        @:<td>
                                <button class="cart-reduce" data-product="@item.Product.ProductName" onclick="decreaseValue()" value="Decrease Value">-</button>
                                <span style="padding: 5px" id="@item.Product.ProductName" class="quantity" onchange="updateSubtotal()">@item.Qty</span>
                                <button class="cart-add" data-product="@item.Product.ProductName" onclick="increaseValue()" value="Increase Value">+</button> 
                        @:</td>
                        @:<td><span class="cart-subtotal" data-product="@item.Product.ProductName">$@(item.Product.Price*item.Qty).00</span></td>
                        @:<td><span class="cart-del">Delete</span></td>
                    @:</tr>
                }

                @*@for (int i = 0; i < cart.CartItem.Count(); i++)
            {
                @:<tr class="cart-item">
                    @:<td><img src=@cart.CartItem.Product.imagePath width="125" height="66" /></td>
                    @:<td class="cart-txt-left"><span class="cart-name">@cart.Products[i].Products.productName</span></td>
                    @:<td class="cart-txt-left"><span class="cart-description">@cart.Products[i].Products.description</span></td>
                    @:<td><span class="cart-price">@cart.Products[i].Products.price</span></td>
                    @:<td><span class="cart-reduce">-</span><span class="cart-num">@cart.Products[i].Qty</span> <span class="cart-add">+</span> </td>
                    @:<td><span class="cart-subtotal">0</span></td>
                    @:<td><span class="cart-del">Delete</span></td>
                @:</tr>
            }*@
            }



            <tr class="cart-bottom">
                <td colspan="6">
                    <span class="cart-bottom-span">
                        Total：
                        <span class="cart-total-price">
                            @{ double sum = 0; }
                            @foreach (CartItem item in cart.CartItem)
                            {
                                sum += item.Product.Price * item.Qty;
                            }
                            $@sum.00
                        </span>
                    </span>
                </td>

            </tr>
            <tr class="cart-bottom">
                <td colspan="6">
                    <span class="cart-bottom-btn">Continue Shopping</span>
                    <span class="cart-bottom-btn">Check out</span>
                </td>
            </tr>

        </table>
    </div>

